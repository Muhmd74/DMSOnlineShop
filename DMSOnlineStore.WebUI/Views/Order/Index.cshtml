@model DMSOnlineStore.WebUI.ViewModel.OrderCreated.CreateOrderViewModel

@{
    ViewBag.Title = "Checkout";
}

<h1>User Registration</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="RequestDate"></label>
                <input asp-for="RequestDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DueDate"></label>
                <input asp-for="DueDate" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="Address"></label>
                <textarea class="form-control" asp-for="Address" maxlength="2500" rows="4"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea class="form-control" asp-for="Description" maxlength="2500" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="card-footer">
                <input type="submit" value="Update" class="btn btn-primary"
                       style="width:auto" />
                 
            </div>

        </form>
    </div>
</div>