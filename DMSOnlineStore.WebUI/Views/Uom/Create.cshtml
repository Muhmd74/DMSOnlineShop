@model UomFormViewModel
@{
    ViewData["Title"] = "Create Unit";

}

@{
 
}
<hr />

<section class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Create">

            <div class="form-group">
                <label class="text-muted" asp-for="Name"> </label>
                <input type="text" class="form-control" asp-for="Name" maxlength="50" />
                <span asp-validation-for="Name " class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="text-muted" asp-for="Description"> </label>
                <input type="text" class="form-control" asp-for="Description" maxlength="100" />
                <span asp-validation-for="Description " class="text-danger"></span>
            </div>
            <div>
                <button type="submit" class="btn btn-primary mt-4 ">
                    <i class="bi bi-plus-circle-fill"></i>

                    Save
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary mt-4">
                    Back
                </a>
            </div>
        </form>
    </div>
</section>
